                    },
                    "total_amount": {
                        "type": "number",
                        "description": "Total nilai pembelian yang diproses"
                    },
                    "stamps_added": {
                        "type": "integer",
                        "description": "Jumlah stamp yang ditambahkan"
                    },
                    "current_stamps": {
                        "type": "integer",
                        "description": "Total stamp pelanggan setelah penambahan"
                    },
                    "message": {
                        "type": "string",
                        "description": "Pesan sukses atau error"
                    }
                }
            },
